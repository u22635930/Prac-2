@model List<CraigStudyGroup.Models.Student>

<h2>Study Group Members</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student Number</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Profile</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentNumber</td>
                <td>@student.Name</td>
                <td>@student.Surname</td>
                <td>@student.Email</td>
                <td>
                    <a href="@student.MyLink" class="btn btn-primary" target="_blank">LINK</a>
                </td>
                <td>
                    <button class="btn btn-danger btn-sm" onclick="removeRow(this)">Remove</button>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    function removeRow(button) {
        var row = button.closest("tr");
        row.remove();
    }
</script>
